<div class="row">  
	<% if (productsData.length > 0){%> 
		<%  for (let i=0; i<productsData.length; i++){ %>
	<div class="col-sm-4">
		<div class="banner banner-cat banner-badge">
			<a href="/details?product=<%=productsData[i]._id %>">
				<img src="<%=productsData[i].image[i]%>" alt="Banner">
			</a>
			<a class="banner-link" href="/details?product=<%=productsData[i]._id %>">
				<h3 class="banner-title"><%=productsData[i].title %></h3><!-- End .banner-title -->
				<!-- <h4 class="banner-subtitle">2 Products</h4> -->
				<span class="banner-link-text">Shop Now</span>
			</a><!-- End .banner-link -->
		</div><!-- End .banner -->
	</div><!-- End .col-sm-8 -->
	
	 <% } %>
	<% }else{  %>
		<div class="col-lg-12">
			<div class="alert alert-danger text-center" role="alert">
				No product found for this item in category, please search for other products.    
			</div>
		</div>
	<% } %>
</div><!-- End .row -->


<div class="col-sm-4">
	<div class="banner banner-cat banner-badge">
		<a href="/details?product=<%=productsData[i]._id %>">
			<img src="<%=productsData[i].image[i]%>" alt="Banner">
		</a>
		<a class="banner-link" href="/details?product=<%=productsData[i]._id %>">
			<h3 class="banner-title"><%=productsData[i].title %></h3><!-- End .banner-title -->
			<!-- <h4 class="banner-subtitle">2 Products</h4> -->
			<span class="banner-link-text">Shop Now</span>
		</a><!-- End .banner-link -->
	</div><!-- End .banner -->
</div><!-- End .col-sm-8 -->