<%-include('../templates/dashboard_header')%>
  <div class="container">
    <table id="example" class="table table-hover table-responsive">
      <thead style="background-color:#333;color:white">
          <th>S/N</th>
          <th>NAME</th>
          <th>PRICE</th>
          <th>TITLE</th>
          <th>TYPE</th>
          <th>CONDITION</th>
          <th>STATUS</th>
          <th>ADMIN ACTIONS</th>
        </tr>
      </thead>
      <tbody>
         <% 
           if (getProducts.length > 0){
             let sn=1;
            getProducts.forEach( product => { %>
          <tr>
              <td><%- sn %></td>
              <td><%- product.name %></td>
              <td><%- product.price %></td>
              <td><%- product.title %></td>
              <td><%- product.type %></td>
              <td><%- product.condition %></td>
              <td><% if (product.isConfirmed==1){ %> <b style="color:green;">Approved <i class="far fa-check-circle"></i></b> <% }else{ %><b style="color:red">Unapproved</b> <% } %></td>
              <td><a  href="/edit_product/<%=product.id %>" class="btn btn-primary">Edit</a>
                <a type="button" class="btn btn-danger">Delete</a>        
              </td>
            </tr>
            <% sn++ %>
          <% }) }%>
      </tbody>
    </table> 
  </div>
<%-include('../templates/dashboard_footer')%>