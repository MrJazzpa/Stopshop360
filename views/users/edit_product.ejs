<%-include('../templates/dashboard_header')%>

<div class="container">
    <form class="form form-vertical" action="">
        <div class="row">
            <div class="col-sm-4 text-center profile_image" >
               <!-- Display product image here-->
            </div>
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="uploader name">Uploader Name<span class="kv-reqd">*</span></label>
                            <input type="text" class="form-control" name="uplader_name" id="uploader_name" value="walison Kemkanma" readonly>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="price">Product Price<span class="kv-reqd">*</span></label>
                            <input type="number" class="form-control" name="price" id="price" value="3000" readonly>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="title">Product Title</label>
                            <input type="text" class="form-control" name="title" id="title" value="hair" readonly >
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="condition">Condition</label>
                            <input type="text" class="form-control" name="condition" id="condition" value="brand New" readonly>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="title">Product Type</label>
                            <input type="text" class="form-control" name="type" id="type" value="Book a Hairdresser" readonly >
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="title">Display Periority</label>
                            <select class="form-control">
                                <option>Featured</option>
                                <option>On Sale</option>
                                <option>Top Rated</option>
                                <option>Trending</option>
                                <option>Top Selling Products</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-check" style="margin-left:2%">
                        <input class="form-check-input" type="checkbox" value="" id="verify">
                        <label class="form-check-label" for="verify upload" style="margin-left:1%;">
                          Verify Upload
                        </label>
                      </div>
                </div>
                <div class="form-group">
                    <hr>
                    <div class="text-right">
                        <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div id="kv-avatar-errors-1" class="text-center" style="display:none"></div>

</div>


<%-include('../templates/dashboard_footer')%>