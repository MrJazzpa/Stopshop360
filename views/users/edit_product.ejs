<%-include('../templates/dashboard_header')%>
<div class="container">
    <div class="row">
        <div class="col-sm-4 text-center profile_image" >
            <!-- Display product image here-->
         </div>
         <form id="updateProductItem"> 
            <div class="col-sm-8">
                <div id="updateMsg" style ="margin-bottom: 10px;"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="uploader name">Product Name<span class="kv-reqd">*</span></label>
                            <input type="text" class="form-control" name="uplader_name" id="uploader_name" value="<%=singleProduct.name %>" readonly>
                           <input type="hidden" name="itemId" id="itemId" value="<%=singleProduct._id %>">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="price">Product Price<span class="kv-reqd">*</span></label>
                            <input type="number" class="form-control" name="price" id="price" value="<%=singleProduct.price %>" readonly>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="title">Product Title</label>
                            <input type="text" class="form-control" name="title" id="title" value="<%=singleProduct.title %>" readonly >
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="condition">Condition</label>
                            <input type="text" class="form-control" name="condition" id="condition" value="<%=singleProduct.condition %>" readonly>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="title">Product Type</label>
                            <input type="text" class="form-control" name="type" id="type" value="<%=singleProduct.type %>" readonly >
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="priority">Display Periority</label>
                            <select id="priority" class="form-control">
                                <option value="<%=singleProduct.priority %>"><%=singleProduct.priority %></option>
                                <option value="On Sale">On Sale</option>
                                <option value="Top Rated">Top Rated</option>
                                <option value="Trending">Trending</option>
                                <option value="Top Selling Products">Top Selling Products</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-check" style="margin-left:2%">
                        <input class="form-check-input" type="checkbox" value="" id="check_id">
                        <label class="form-check-label" for="verify upload" style="margin-left:1%;">
                          Approve Upload
                        </label>
                      </div>
                </div>
                <div class="form-group">
                    <hr>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg sub_item">Update Item</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div id="kv-avatar-errors-1" class="text-center" style="display:none"></div>
</div>
<%-include('../templates/dashboard_footer')%>